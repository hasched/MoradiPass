<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.moradipass.controller.DashboardController">
    <top>
        <ToolBar>
            <Label text="MoradiPass" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Add" onAction="#handleAdd"/>
            <Button text="Edit" onAction="#handleEdit"/>
            <Button text="Delete" onAction="#handleDelete"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="passwordTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="siteColumn" text="Site" prefWidth="150"/>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                <TableColumn fx:id="passwordColumn" text="Password" prefWidth="150"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
